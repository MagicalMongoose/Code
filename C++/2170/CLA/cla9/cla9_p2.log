     9	#include <iostream>
    10	#include <string>
    11	#include <cctype>
    12	using namespace std;
    13	
    14	//Method definition
    15	string sentenceCapitalized(string str)
    16	{	
    17		int pos = str.find(" ");
    18		str[0] = toupper(str[0]);
    19		while (pos != string::npos)
    20		{
    21			str[pos+1] = toupper(str[pos+1]);
    22			pos = str.find(" ", pos+1);
    23		}
    24		return str;
    25	}
    26	
    27	int main()
    28	{
    29		cout << "Input a sentence, and this program will capitalize the first letter of each word" << endl;
    30		string str;
    31		getline(cin, str);
    32		cout << sentenceCapitalized(str) << endl;
    33		return 0;
    34	}
    35	
